        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
  if (isLoading || newValue == '') return;

  var ga = new GlideAjax('TaskEventUtils');
  ga.addParam('sysparm_name', 'getEventDetails');
  ga.addParam('sysparm_event_id', newValue);

  ga.getXMLAnswer(function(response) {
    var result = JSON.parse(response);
    if (result.error) {
      g_form.showFieldMsg('event_id', result.message, 'error');
    } else {
      g_form.setValue('event_name', result.event_name);
      g_form.setValue('start_date', result.start_date);
      g_form.setValue('location', result.location);
    }
  });
}
