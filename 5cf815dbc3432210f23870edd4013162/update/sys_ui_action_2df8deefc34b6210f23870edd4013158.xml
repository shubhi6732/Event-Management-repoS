        <name>Cancel Task</name>
        <onclick>Cancel()</onclick>
        <order>100</order>
        <script><![CDATA[function Cancel() {
   if (!confirm("Are you sure you want to cancel this task?")) {
        return;
    }

    var ga = new GlideAjax('EventDate');
    ga.addParam('sysparm_name', 'cancelTask');
    ga.addParam('sysparm_sys_id', g_form.getUniqueValue());

    ga.getXMLAnswer(function(response) {
        var answer = response;
        if (answer === 'success') {
            g_form.setValue('status', 'cancelled'); 
            alert('Task has been cancelled.');
            g_form.save(); 
        } else {
            alert('Error cancelling task: ' + answer);
        }
    });
}]]></script>
